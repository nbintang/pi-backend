{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "ES2017",
      "DOM"
    ],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}